services:

  # ---------------------------------------------------------
  # TSDB
  # ---------------------------------------------------------
{% if monitoring_role == 'server' %}
  victoriametrics:
    image: {{ monitoring_stack_victoriametrics_image }}
    container_name: victoriametrics
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    volumes:
      - vm_data:/storage
    ports:
      - "8428:8428"
    command:
      - "-storageDataPath=/storage"
      - "-retentionPeriod=1y" # Default is 1 month
      - "-httpListenAddr=:8428"
    networks:
      - monitoring
{% endif %}

  # ---------------------------------------------------------
  # LOGS
  # ---------------------------------------------------------
{% if monitoring_role == 'server' %}
  loki:
    image: {{ monitoring_stack_loki_image }}
    container_name: loki
    restart: unless-stopped
    volumes:
      - ./config/loki/loki-config.yaml:/etc/loki/local-config.yaml
      - loki_data:/loki
    ports:
      - "3100:3100"
    command: -config.file=/etc/loki/local-config.yaml
    networks:
    - monitoring
{% endif %}

  # ---------------------------------------------------------
  # Data Visualization
  # ---------------------------------------------------------
{% if monitoring_role == 'server' %}
  grafana:
    image: {{ monitoring_stack_grafana_image }}
    container_name: grafana
    restart: unless-stopped
    ports:
      - "3000:3000"
    volumes:
      - grafana_data:/var/lib/grafana
      - {{ monitoring_config_dir }}/grafana/provisioning:/etc/grafana/provisioning
    environment:
      - GF_SECURITY_ADMIN_USER=${GF_SECURITY_ADMIN_USER}
      - GF_SECURITY_ADMIN_PASSWORD=${GF_SECURITY_ADMIN_PASSWORD}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_INSTALL_PLUGINS=grafana-clock-panel
      - GF_INSTALL_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource
      - GF_ANALYTICS_REPORTING_ENABLED=false  
      - GF_ANALYTICS_CHECK_FOR_UPDATES=false     
      - GF_ANALYTICS_CHECK_FOR_PLUGIN_UPDATES=false
    depends_on:
      - victoriametrics
      - loki
    networks:
      - monitoring
{% endif %}

  # ---------------------------------------------------------
  # Proxmox Data Exporter
  # ---------------------------------------------------------
{% if monitoring_role == 'server' %}
  pve-exporter:
    image: {{ monitoring_stack_pve_exporter_image }}
    restart: unless-stopped
    ports:
      - "9221:9221"
    environment:
      - PVE_USER=${PVE_USER}
      - PVE_TOKEN_NAME=${PVE_TOKEN_NAME}
      - PVE_TOKEN_VALUE=${PVE_TOKEN_VALUE}
      - PVE_VERIFY_SSL={{ pve_verify_ssl }}
    networks:
      - monitoring
{% endif %}

  # ---------------------------------------------------------
  # Data Agent
  # ---------------------------------------------------------
  cadvisor:
    image: {{ monitoring_stack_cadvisor_image }}
    container_name: external_cadvisor
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker:/var/lib/docker:ro
      - /dev/disk:/dev/disk:ro
    devices:
      - /dev/kmsg # detect OOM
#    ports:
#      - "8078:8080"
    privileged: true
    networks:
      - monitoring

  alloy:
    image: {{ monitoring_stack_alloy_image }}
    container_name: alloy
    hostname: "{{ ansible_facts["hostname"] }}"
    restart: unless-stopped
    # Requires privileges to get logs and metrics from host
    user: root
    pid: host
    privileged: true #cAdvisor
    #cap_add:
    #  - SYS_PTRACE       # Useful for profiling
    #  - DAC_READ_SEARCH
    volumes:
      # Configuration and data (WAL)
      - {{ monitoring_config_dir }}/alloy/config.alloy:/etc/alloy/config.alloy
      - alloy_data:/var/lib/alloy/data

      # Docker access (to find out containers logs/metrics)
      - /var/run/docker.sock:/var/run/docker.sock:ro

      # Host metrics
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
      - /:/host/root:ro

      # Host logs 
      - /var/log/journal:/var/log/journal:ro
      - /etc/machine-id:/etc/machine-id:ro # Required for journald
    environment:
      # These are optional. They are defined on config.alloy
      - HOST_PROC=/host/proc
      - HOST_SYS=/host/sys
      - HOST_ROOT=/host/root
    command: run --server.http.listen-addr=0.0.0.0:12345 --storage.path=/var/lib/alloy/data --disable-reporting /etc/alloy/config.alloy
    ports:
      - "12345:12345" # Debug UI
    logging:
      driver: "json-file"
      options:
        max-size: "10m"   # MÃ¡ximo 10 MB per file
        max-file: "3"
    {% if monitoring_role == 'server' -%}
    depends_on:
      - victoriametrics
      - loki
    networks:
      - monitoring
    {% endif %}


networks:
  monitoring:
    driver: bridge

{% if monitoring_role == 'server' %}
volumes:
  grafana_data: {}
  vm_data: {}
  loki_data: {}
  alloy_data: {}
{% endif %}